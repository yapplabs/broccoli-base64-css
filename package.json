{
  "name": "@yapplabs/broccoli-base64-css",
  "version": "0.0.5",
  "description": "Replace references to images in CSS with base64 strings",
  "keywords": [
    "broccoli-plugin",
    "css"
  ],
  "repository": "https://github.com/yapplabs/broccoli-base64-css",
  "license": "MIT",
  "author": "Moudy",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "release": "release-it",
    "test": "mocha tests",
    "test:debug": "mocha debug tests",
    "test:lint": "mocha tests/lint.js",
    "test:watch": "testem"
  },
  "dependencies": {
    "broccoli-persistent-filter": "^3.0.0"
  },
  "devDependencies": {
    "broccoli-test-helper": "^2.0.0",
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "mocha-eslint": "^6.0.0",
    "release-it": "^13.6.0",
    "release-it-lerna-changelog": "^2.3.0",
    "testem": "^3.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
